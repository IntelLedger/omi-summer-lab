{
  "name": "omi-client",
  "version": "1.0.0",
  "description": "none",
  "repository": {
    "type": "git",
    "url": "git://github.com/IntelLedger/omi-summer-lab.git"
  },
  "main": "omi-client/lib/index.js",
  "scripts": {
    "compile-protobuf": "node ./omi-client/scripts/compile_protobuf.js > ./omi-client/lib/protobuf/protobuf_bundle.json",
    "test": "standard && mocha --recursive omi-client/spec --compilers js:babel-register -r babel-polyfill",
    "watch:test": "mocha -w --recursive omi-client/spec --compilers js:babel-register -r babel-polyfill",
    "prepublish":": npm run compile-protobuf",
    "postinstall": "./omi-client/scripts/install_sawtooth_sdk.sh",
    "build-docs": "mkdir -p omi-client/docs && jsdoc -c omi-client/conf.json -d ./omi-client/docs"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "jsdoc": "^3.4.3",
    "mocha": "^3.4.2",
    "standard": "^10.0.2",
    "superagent-mocker": "^0.5.2"
  },
  "dependencies": {
    "protobufjs": "^6.7.3",
    "superagent": "^3.5.2"
  },
  "standard": {
    "ignore": [
      "dependencies",
      "docs"
    ],
    "globals": [
      "describe",
      "beforeEach",
      "it"
    ]
  }
}
